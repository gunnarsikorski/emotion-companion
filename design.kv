<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 20, 20
            spacing: 20, 20
            Label:
                text: 'Welcome!'
                font_size: '35sp'
            TextInput:
                id: username
                hint_text: 'Username'
            TextInput:
                id: password
                password: True
                hint_text: 'Password'
            RelativeLayout:
                Button:
                    text: 'Login'
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.66
                    pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            Label:
                id: wrong_login
                text: ''
        GridLayout:
            cols: 2
            size_hint: 0.15, 0.15
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: 'Forgot Password?'
                background_color: 1, 1, 1, 0
                color: 0.1, 0.7, 1, 1
                opacity: 1 if self.state == 'normal' else 0.5
            Button:
                text: 'Sign Up Here'
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                color: 0.1, 0.7, 1, 1
                opacity: 1 if self.state == 'normal' else 0.5


<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: 'Start the good vibes here'
            font_size: '35sp'
        TextInput:
            id: username
            hint_text: 'Username'
            size_hint: .5, .4
        TextInput:
            id: password
            hint_text: 'Password'
            size_hint: .5, .4
        RelativeLayout:
            Button:
                text: 'Submit'
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.3, 0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.25}

<SignUpSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: 'Sign up successful!'
        Button:
            text: 'Back to login'
            on_press: 
                root.back_to_login()
                root.manager.transition.direction = 'right'

<LoginSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: 
                    root.logout()
                    root.manager.transition.direction = 'right'
                source: './assets/logout_hover.png' if self.hovered else './assets/logout_nothover.png'
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        Label:
            text: 'How are you feeling?'
        TextInput:
            id: emotion
            hint_text: 'Happy, sad, lonely...'
        Button:
            text: 'Get Quote'
            on_press: root.get_quote(root.ids.emotion.text)
        ScrollView:
            Label:
                id: quote
                text: ''
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name: 'sign_up_screen'
    SignUpSuccess:
        name: 'sign_up_success'
    LoginSuccess:
        name: 'login_success'
