<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: 'User Login'
            TextInput:
                id: username
                hint_text: 'Username'
            TextInput:
                id: password
                hint_text: 'Password'
            Button:
                text: 'Login'
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: wrong_login
                text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Forgot Password?'
            Button:
                text: 'Sign Up Here'
                on_press: root.sign_up()


<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: 'Start the good vibes here'
        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: password
            hint_text: 'Password'
        Button:
            text: 'Submit'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: 'Sign up successful!'
        Button:
            text: 'Back to login'
            on_press: 
                root.back_to_login()
                root.manager.transition.direction = 'right'

<LoginSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: 'Logout'
            on_press: 
                root.logout()
                root.manager.transition.direction = 'right'
        Label:
            text: 'How are you feeling?'
        TextInput:
            id: emotion
            hint_text: 'Happy, sad, lonely...'
        Button:
            text: 'Get Quote'
            on_press: root.get_quote(root.ids.emotion.text)
        Label:
            id: quote
            text: ''

<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name: 'sign_up_screen'
    SignUpSuccess:
        name: 'sign_up_success'
    LoginSuccess:
        name: 'login_success'
